<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme">
        <item name="homeAsUpIndicator">@drawable/ic_top_menu</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_top_menu</item>
        <item name="navigationIcon">@drawable/ic_top_menu</item>
    </style>
</resources>
